      <li id="drag5" data-option="5" class="list-inline-item draggable_text text-info" draggable="true" ondragstart="drag(event)">Implantación de cambios</li>
  </ul>

  <button type="submit" class="btn btn-primary">Siguiente</button>
</form>

<script>
send_eval_conf("#form_eval_2", "/eval_3");
function allowDrop(ev) {
    ev.preventDefault();
}

function drag(ev) {
    ev.dataTransfer.setData("text", ev.target.id);
}

function drop(ev) {
    ev.preventDefault();
    // element_id is id of dragged element
    // text element is dragged element
    var element_id = ev.dataTransfer.getData("text");
    // Dropable element is appended with dragged element
    debugger;
    ev.target.appendChild(document.getElementById(element_id));
    $textElem = $("#"+element_id);
    // target id is dropable element id
    var targetId = ev.target.id;
    $termInput = $("#"+targetId).find(".term_input");
    // insert value to hidden input
    $termInput.val($textElem.data("option"));
}
</script>