<form id="form_eval_2">
  <div id="drag-drop-cont" class="row">
    
    <div id="drop1" class="col-sm-2 dropable_content align-center" ondrop="drop(event)" ondragover="allowDrop(event)">
        <input name="drop_1" type="hidden" class="term_input">
    </div>

    <div id="drop2" class="col-sm-2 dropable_content align-center" ondrop="drop(event)" ondragover="allowDrop(event)">
        <input name="drop_2" type="hidden" class="term_input">
    </div>

    <div id="drop3" class="col-sm-2 dropable_content align-center" ondrop="drop(event)" ondragover="allowDrop(event)">
        <input name="drop_3" type="hidden" class="term_input">
    </div>

    <div id="drop4" class="col-sm-2 dropable_content align-center" ondrop="drop(event)" ondragover="allowDrop(event)">
        <input name="drop_4" type="hidden" class="term_input">
    </div>

    <div id="drop5" class="col-sm-2 dropable_content align-center" ondrop="drop(event)" ondragover="allowDrop(event)">
        <input name="drop_5" type="hidden" class="term_input">
    </div>
    
  </div>
  
  <hr class="mb20">

  <ul id="draggable-list" class="list-inline">
      <li id="drag1" data-option="1" class="list-inline-item draggable_text text-info" draggable="true" ondragstart="drag(event)">Planificación</li>
      <li id="drag2" data-option="2" class="list-inline-item draggable_text text-info" draggable="true" ondragstart="drag(event)">Diagnóstico inicial</li>
      <li id="drag3" data-option="3" class="list-inline-item draggable_text text-info" draggable="true" ondragstart="drag(event)">Evaluación Final</li>
